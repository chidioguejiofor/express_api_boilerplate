{
  "name": "express_api_boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for my Express Typescript projects ",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "start": "npm run build && node ./dist/index.js",
    "lint": "rm -rf dist && tsc --noEmit  && eslint \"*/**/*.{js,ts}\" --quiet --fix",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chidioguejiofor/express_api_boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chidioguejiofor/express_api_boilerplate/issues"
  },
  "homepage": "https://github.com/chidioguejiofor/express_api_boilerplate#readme",
  "dependencies": {
    "@types/node": "^14.11.10",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.4.1",
    "pg-connection-string": "^2.4.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.5",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
