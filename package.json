{
  "name": "express_api_boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for my Express Typescript projects ",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node ./src/index.ts",
    "start": "npm run build && node ./dist/index.js",
    "lint": "rm -rf dist && tsc --noEmit  && eslint \"./src/**/*.{js,ts}\" --quiet --fix",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "coverage": "nyc  -t coverage npm run test",
    "build": "tsc && sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chidioguejiofor/express_api_boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chidioguejiofor/express_api_boilerplate/issues"
  },
  "homepage": "https://github.com/chidioguejiofor/express_api_boilerplate#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.3.0",
    "@types/async-redis": "^1.1.1",
    "@types/node": "^14.11.10",
    "@types/redis": "^2.8.28",
    "async-redis": "^1.1.7",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.4.1",
    "pg-connection-string": "^2.4.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5",
    "uuid": "^8.3.1",
    "validatorjs": "^3.20.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.5.0",
    "chai": "^4.2.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "lint-staged": "^10.4.2",
    "mocha": "^8.2.0",
    "nodemon": "^2.0.5",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
