{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "allowJs": true,

    "esModuleInterop": true
  },
  "experimentalDecorators": true,
  "exclude": [
    "node_modules",
    "./tests/",
     "./dist"
    ],
  "paths": {
      "*": ["src/*"],
  },
  "skipLibCheck": true,
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
  ]
}
